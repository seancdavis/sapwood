<a href="#" id="sidebar-trigger"><span>&lt;&nbsp;</span>Menu</a>

<aside class="main">
  <div class="controls">
    <%= link_to 'Deck', deck_path  %>
    <div class="current-property">
      <span class="color-block"
            style="background: <%= current_property.color %>"></span>
      <span class="title">
        <%= link_to current_property.title, current_property %>
        <%= link_to(edit_property_path(current_property),
                    :class => 'edit') do %>
          <i class="icon-settings"></i>
        <% end %>
      </span>
    </div>
    <div class="search">
      <input type="text" placeholder="search">
    </div>
  </div>
  <nav>
    <ul>
      <% current_property.templates.each do |t| %>
        <li>
          <%= link_to t.name.pluralize,
                      property_template_elements_path(current_property, t),
                      :class => ('active' if current_template && current_template.name == t.name) %>
        </li>
      <% end %>
      <% if current_user.is_admin? %>
        <li>
          <%= link_to 'Users', property_users_path(current_property)  %>
        </li>
      <% end %>
    </ul>
  </nav>
</aside>
