<a href="#" id="sidebar-trigger"><span>&lt;&nbsp;</span>Menu</a>

<aside class="main">
  <div class="controls">
    <%= link_to 'Deck', deck_path  %>
    <div class="current-property">
      <span class="color-block"
            style="background: <%= current_property.color %>"></span>
      <span class="title">
        <%= link_to current_property.title, current_property %>
        <%= link_to(edit_property_path(current_property),
                    :class => 'edit') do %>
          <i class="icon-settings"></i>
        <% end %>
      </span>
    </div>
    <div class="search">
      <input type="text" placeholder="search">
    </div>
  </div>
  <nav>
    <ul>
      <% current_property.templates.each do |t| %>
        <li>
          <%= link_to t.name.pluralize,
                      property_template_elements_path(current_property, t),
                      :class => ('active' if current_template && current_template.name == t.name) %>
        </li>
      <% end %>
      <% unless current_property.label_hidden?('documents') %>
        <li>
          <%= link_to current_property.label('documents'),
                      property_documents_path(current_property),
                      :class => ('active' if controller_name == 'documents') %>
        </li>
      <% end %>
      <% current_property.collection_types.each do |c| %>
        <li>
          <%= link_to c.name.pluralize,
                      [current_property, c, :collections],
                      :class => ('active' if current_collection_type && current_collection_type.name == c.name) %>
        </li>
      <% end %>
      <% unless current_property.label_hidden?('responses') %>
        <!-- <li><%= link_to current_property.label('responses'), '#' %></li> -->
      <% end %>
      <% unless current_property.label_hidden?('users') %>
        <li>
          <%= link_to current_property.label('users'),
                      property_users_path(current_property)  %>
        </li>
      <% end %>
    </ul>
  </nav>
</aside>
