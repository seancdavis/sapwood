<%= install_card :title => t('install.six.title') do %>
  <%= simple_format t('install.six.message') %>
  <%= simple_form_for :install, :url => install_update_path,
                      :method => :post do |f| %>
    <%= f.input :name, :label => false, :required => true,
                :placeholder => t('install.six.name') %>
    <%= f.input :email, :label => false, :required => true,
                :placeholder => t('install.six.email') %>
    <%= f.input :password, :label => false, :required => true,
                :placeholder => t('install.six.password') %>
    <%= f.submit t('install.next') %>
  <% end %>
<% end %>
