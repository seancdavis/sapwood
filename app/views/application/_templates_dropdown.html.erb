<nav class="template dropdown">
  <ul>
    <li class="section">
      <%= link_to(new_property_folder_path(current_property)) do %>
        <i class="icon-folder"></i>
        Folder
      <% end %>
    </li>
    <li><h3><%= current_property.label('elements') %></h3></li>
    <% current_property.templates.each do |t| %>
      <li>
        <%= link_to(
          t.title,
          new_property_element_path(current_property, :template => t.title)
        ) %>
      </li>
    <% end %>
  </ul>
</nav>
