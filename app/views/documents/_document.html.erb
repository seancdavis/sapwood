<article class="document <%= document.image? ? 'img' : 'doc' %>"
         data-id="<%= document.id %>" data-title="<%= document.title %>"
         data-url="<%= document.version(:small, true) %>"
         data-image="<%= document.image? %>"
         style="background-image: url('<%= document.version(:medium) if document.image? %>')">
  <%= link_to [:edit, current_property, current_template, document] do %>
    <span class="title">
      <%=  document.title %>
    </span>
    <span class="thumb hidden">
      <%= document.p.thumb %>
    </span>
  <% end %>
</article>
