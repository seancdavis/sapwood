<%= install_card :title => t('install.three.title') do %>
  <%= simple_format t('install.three.message') %>
  <%= simple_form_for :install, :url => install_update_path,
                      :method => :post do |f| %>
    <%= f.input :name, :label => false, :required => true, :autofocus => true,
                :placeholder => t('install.three.name') %>
    <%= f.input :email, :label => false, :required => true,
                :placeholder => t('install.three.email') %>
    <%= f.submit t('install.next') %>
  <% end %>
<% end %>
