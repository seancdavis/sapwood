<%= page_header(
  :title => current_template.name.pluralize,
  :button => {
    :label => "New #{current_template.name}",
    :path => new_property_template_element_path(current_property, current_template),
    :options => { :class => 'new button' }
  }) %>

<section class="body">
  <% if @elements.present? %>
    <div class="block">
      <table>
        <thead>
          <tr>
            <th class="icon"></th>
            <th>Title</th>
            <th>Slug</th>
            <th>Template</th>
          </tr>
        </thead>
        <% if @folders.present? %>
          <tbody class="folders">
            <%= render @folders %>
          </tbody>
        <% end %>
        <% if @elements.present? %>
          <tbody class="elements">
            <%= render @elements %>
          </tbody>
        <% end %>
      </table>
    </div>
  <% else %>
    <%= render 'empty' %>
  <% end %>
</section>
