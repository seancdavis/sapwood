<%= page_header(
  :notifications => current_template.name,
  :title => current_template.name.pluralize,
  :button => {
    :label => "New #{current_template.name}",
    :path => new_property_template_element_path(current_property, current_template),
    :options => { :class => 'new button' }
  }) %>

<section class="body">
  <% if @elements.present? %>
    <div class="block">
      <table>
        <thead>
          <tr>
            <th class="icon"></th>
            <% current_template.columns.each do |col| %>
              <th><%= link_to col.label, list_sort_path(col),
                              :class => list_sort_class(col) %></th>
            <% end %>
          </tr>
        </thead>
        <tbody class="elements">
          <%= render @elements %>
        </tbody>
      </table>
    </div>
    <%= paginate @elements %>
  <% else %>
    <%= render 'empty' %>
  <% end %>
</section>
