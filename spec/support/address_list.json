[
  // Our very basic template, used to show the minimum we need to have a
  // functioning template.
  {
    "title": "Default",
    "fields": {
      "name": { "primary": true },
      "address": {
        "type": "geocode",
        "label": "Location"
      }
    },
    "list": {
      "columns": {
        "name": { "primary": true },
        "address": {},
        "city": {
          "format": "city",
          "field": "address"
        },
        "state": {
          "format": "state",
          "label": "US State",
          "field": "address"
        }
      }
    }
  }
]
