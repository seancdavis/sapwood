[
  // Our very basic template, used to show the minimum we need to have a
  // functioning template.
  {
    "title": "Default",
    "fields": {
      "name": {}
    }
  },
  // Demonstrates all the options on any particular template. Most of the
  // following templates are built to serve this example.
  {
    "title": "All Options",
    "webhook_url": "http://localhost:3000/webhook",
    "page_length": 50,
    "security": {
      "create": {
        "allow": true,
        "secret": "b89b279213b15fa53c4a22f9"
      }
    },
    "list": {
      "order": {
        "by": "description"
      },
      "columns": {
        "description": {},
        "name": { "primary": true },
        "updated_at": {
          "label": "Date Last Modified",
          "format": "%b %d, %y"
        }
      }
    },
    "associations": {
      "options": {
        "template": "More Options",
        "field": "option"
      }
    },
    "fields": {
      "name": {
        "primary": true
      },
      "description": {
        "type": "string",
        "label": "Description"
      },
      "address": {
        "type": "geocode",
        "label": "Address"
      },
      "comments": {
        "type": "wysiwyg",
        "label": "Comments"
      },
      "image": {
        "type": "element",
        "templates": ["Image"],
        "label": "Image"
      },
      "images": {
        "type": "elements",
        "templates": ["Image"],
        "label": "Image"
      },
      "mixed_bag": {
        "type": "element",
        "templates": ["Image", "One Thing"],
        "label": "Mixed Bag"
      },
      "mixed_bags": {
        "type": "elements",
        "templates": ["Image", "One Thing"],
        "label": "Mixed Bags"
      },
      "one_thing": {
        "type": "element",
        "templates": ["One Thing"],
        "label": "One Thing"
      },
      "many_things": {
        "type": "elements",
        "templates": ["Many Things"],
        "label": "Many Things"
      },
      "uneditable": {
        "read_only": true
      },
      "complete": {
        "type": "boolean"
      },
      "dropdown_menu": {
        "type": "select",
        "options": ["Option 1", "Option 2", "Option 3"]
      },
      "date": {
        "type": "date",
        "format": "yyyy-mm-dd"
      },
      "unformatted_date": {
        "type": "date"
      }
    }
  },
  // Demonstrates how we can make a has_many type of call from the opposite side
  // of a belongs_to association.
  {
    "title": "More Options",
    // And show an example of missing a secret.
    "security": {
      "create": {
        "allow": true
      }
    },
    "list": {
      "order": {
        "by": "name",
        "in": "desc"
      }
    },
    "fields": {
      "name": {
        "primary": true
      },
      "option": {
        "type": "element",
        "templates": ["All Options"]
      }
    }
  },
  // Demonstrates that fields can be required. We don't want this with the All
  // Options template because we don't want it to distract other tests.
  {
    "title": "Required",
    "fields": {
      "name": {},
      "subtitle": { "required": true }
    }
  },
  // The other side of a belongs_to on All Options.
  {
    "title": "One Thing",
    "fields": {
      "name": {}
    }
  },
  // The other side of a has_many on All Options.
  {
    "title": "Many Things",
    "fields": {
      "name": { "primary": true },
      "body": { "type": "text" }
    }
  },
  // This is a document-focused template.
  {
    "title": "Image",
    "type": "document",
    "fields": {
      "name": { "primary": true }
    }
  },
  // Demonstrate the Namespace option.
  {
    "title": "Child",
    "namespace": "Parent",
    "fields": {
      "name": { "primary": true }
    }
  },
  // Redirect option
  {
    "title": "Redirector",
    "after_save": {
      "redirect": false
    },
    "fields": {
      "name": { "primary": true }
    }
  },
  // Not shown in menu
  {
    "title": "Hidden",
    "hidden": true,
    "fields": {
      "name": { "primary": true }
    }
  },
  {
    "title": "-A & __ Fun(ny) - +Title^"
  }
]
