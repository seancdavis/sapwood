<%= card :title => "#{current_property.title}: Forms",
         :progress => 80 do %>
  <p>This is your raw form config.</p>
  <p>
    If you don't know what you're looking at, <a href="#">read more here.</a>
  </p>
  <br>
  <%= minimal_form_for current_property do |f| %>
    <%= f.input :forms_raw, :autofocus => true,
                :placeholder => 'Responses Config (JSON)' %>
    <%= f.input :redirect_to, :as => :hidden, :input_html => {
                :value => property_setup_path(current_property, :complete) } %>
    <%= f.submit 'Next' %>
  <% end %>
  <%= link_to 'Go To Property', current_property, :class => 'info' %>
<% end %>
