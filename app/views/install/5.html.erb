<%= install_card :title => t('install.five.title') do %>
  <%= simple_format t('install.five.message') %>
  <%= simple_form_for :install, :url => install_update_path,
                      :method => :post do |f| %>
    <%= f.input :access_key_id, :as => :password, :label => false,
                :required => true,
                :placeholder => t('install.five.access_key_id') %>
    <%= f.input :secret_access_key, :as => :password, :label => false,
                :required => true,
                :placeholder => t('install.five.secret_access_key') %>
    <%= f.input :bucket, :label => false, :required => true,
                :placeholder => t('install.five.bucket') %>
    <%= link_to t('install.five.amazon_label'),
                t('install.five.amazon_url'), :target => :blank,
                :class => 'info' %>
    <%= f.submit t('install.next') %>
  <% end %>
<% end %>
