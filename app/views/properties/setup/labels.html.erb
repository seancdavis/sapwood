<%= card :title => "#{current_property.title}: Labels",
         :progress => 40 do %>
  <p>You can customize the labels for the items within your site:</p>
  <br>
  <%= simple_form_for current_property do |f| %>
    <%= f.simple_fields_for :labels do |ff| %>
      <% Property.labels.each do |label| %>
        <%= ff.input label.to_sym, :required => false,
                     :autofocus => (label == Property.labels.first),
                     :input_html => { :value => label.titleize } %>
      <% end %>
    <% end %>
    <%= f.input :redirect_to, :as => :hidden, :input_html => {
                :value => property_setup_path(current_property, :templates) } %>
    <%= f.submit 'Next' %>
  <% end %>
  <%= link_to 'Go To Property', current_property, :class => 'info' %>
<% end %>
